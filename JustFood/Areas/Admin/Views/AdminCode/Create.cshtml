@model Code

@{
    ViewBag.Title = "Create";
}

<h2>Create Code</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Code</legend>

  
        <div class="editor-field" data-role="controlgroup">
            @Html.LabelFor(model => model.IsOwner)
            @Html.EditorFor(model => model.IsOwner)
            @Html.ValidationMessageFor(model => model.IsOwner)
            @Html.LabelFor(model => model.IsAccessToAdmin)
            @Html.EditorFor(model => model.IsAccessToAdmin)
            @Html.ValidationMessageFor(model => model.IsAccessToAdmin)
            @Html.LabelFor(model => model.IsEmployee)
            @Html.EditorFor(model => model.IsEmployee)
            @Html.ValidationMessageFor(model => model.IsEmployee)
     
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Salary)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Salary)
            @Html.ValidationMessageFor(model => model.Salary)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Percentage)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Percentage)
            @Html.ValidationMessageFor(model => model.Percentage)
        </div>

        <p>
            <input data-role="button" type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back", "Index", null, new { data_role = "button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}